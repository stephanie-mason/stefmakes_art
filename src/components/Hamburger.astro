<button class="menu-toggle" aria-expanded="false">
    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" height="48px" viewBox="0 -960 960 960" width="48px"><path d="M160-240q-17 0-28.5-11.5T120-280q0-17 11.5-28.5T160-320h640q17 0 28.5 11.5T840-280q0 17-11.5 28.5T800-240H160Zm0-200q-17 0-28.5-11.5T120-480q0-17 11.5-28.5T160-520h640q17 0 28.5 11.5T840-480q0 17-11.5 28.5T800-440H160Zm0-200q-17 0-28.5-11.5T120-680q0-17 11.5-28.5T160-720h640q17 0 28.5 11.5T840-680q0 17-11.5 28.5T800-640H160Z"/></svg>
    <span>menu</span>
</button>
<style is:global>
    .menu-toggle {
        position: fixed;
        top: var(--space--xs);
        right: var(--space--xs);
        z-index: 2;
        padding-right: 20px;
        cursor: pointer;
        background: transparent;
        border: none;
        padding: 0;
    }
    .menu-toggle svg {
        display: block;
        fill: var(--hot-pink);        
        margin-bottom: -0.7rem;
    }
    .menu-toggle span {
        display: block;
        color: var(--hot-pink);
    }
    @media (min-width: 778px) {
        .menu-toggle {
            display: none;
        }
    }
</style>
<script>
    const menu_toggle = document.querySelector('.menu-toggle')
    const main_nav = document.querySelector('.main-navigation');

    menu_toggle.addEventListener('click', () => {        
        if (main_nav.classList.contains("open")) {
            menu_toggle.innerHTML = `
                <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" height="48px" viewBox="0 -960 960 960" width="48px"><path d="M160-240q-17 0-28.5-11.5T120-280q0-17 11.5-28.5T160-320h640q17 0 28.5 11.5T840-280q0 17-11.5 28.5T800-240H160Zm0-200q-17 0-28.5-11.5T120-480q0-17 11.5-28.5T160-520h640q17 0 28.5 11.5T840-480q0 17-11.5 28.5T800-440H160Zm0-200q-17 0-28.5-11.5T120-680q0-17 11.5-28.5T160-720h640q17 0 28.5 11.5T840-680q0 17-11.5 28.5T800-640H160Z"/></svg>
                <span>menu</span>
            `;
            menu_toggle.setAttribute("aria-expanded", "false");
            main_nav.classList.remove("open");
        } else {
            menu_toggle.innerHTML= `
                <svg xmlns="http://www.w3.org/2000/svg" height="48px" viewBox="0 -960 960 960" width="48px"><path d="M480-424 284-228q-11 11-28 11t-28-11q-11-11-11-28t11-28l196-196-196-196q-11-11-11-28t11-28q11-11 28-11t28 11l196 196 196-196q11-11 28-11t28 11q11 11 11 28t-11 28L536-480l196 196q11 11 11 28t-11 28q-11 11-28 11t-28-11L480-424Z"/></svg>
                <span>close</span>
            `;
            menu_toggle.setAttribute("aria-expanded", "true");
            main_nav.classList.add("open");
        }
        
    });
</script>